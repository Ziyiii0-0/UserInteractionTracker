{
  "manifest_version": 3,
  "name": "User Interaction Tracker",
  "version": "2.0",
  "description": "Collect user click, scroll, and input interactions.",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "scripting",
    "webNavigation",
    "desktopCapture",
    "tabs",
    "downloads",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "Inactive_icon.png"
  },
  "content_scripts": [
    {
      "js": ["js/content_script.js"],
      "matches": ["https://www.amazon.com/*"],
      "exclude_matches": [
        "https://www.amazon.com/checkout/*",
        "https://www.amazon.com/checkout/p/*",
        "https://www.amazon.com/gp/buy/*",
        "https://www.amazon.com/gp/buy/spc/*",
        "https://www.amazon.com/a/addresses*",
        "https://www.amazon.com/cpe/yourpayments*"
      ],
      "run_at": "document_start"
    },
    {
      "js": ["js/injected.js"],
      "matches": ["https://www.amazon.com/*"],
      "exclude_matches": [
        "https://www.amazon.com/checkout/*",
        "https://www.amazon.com/checkout/p/*",
        "https://www.amazon.com/gp/buy/*",
        "https://www.amazon.com/gp/buy/spc/*",
        "https://www.amazon.com/a/addresses*",
        "https://www.amazon.com/cpe/yourpayments*"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}
